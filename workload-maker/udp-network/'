while [ -n "$1" ]
do
    case "$1" in
        -result) RESULTPATH="$2"
            shift;;
        
        -run) RUN="$2"
            shift;;
            
        -stress) STRESS="$2"
            shift;;
        
        --help) echo "Usage: ./test-control -result [FOLDER_PATH] -run [RUN_NUM] -stress [true/false]"
            exit;;
        
        *) echo "$1 is not an option"   
            exit;;
    esac
    shift
done
